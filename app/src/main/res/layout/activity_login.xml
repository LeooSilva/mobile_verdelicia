<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/telacadastrousuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#96c434">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="355dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/logoverdelicia" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_below="@id/logoImageView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-139dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_top_right_background"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="0dp"
            android:text="Login"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="55sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:text="FaÃ§a login para continuar"
            android:textColor="#067302"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:text="Nome"
            android:textSize="15dp"
            android:textColor="#067302" />

        <EditText
            android:id="@+id/nomeEditText"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_background"
            android:layout_gravity="center"
            android:textColor="#606060"
            android:textColorHint="#606060"
            android:layout_marginBottom="6dp"
            android:padding="8dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senha"
            android:textColor="#067302"
            android:layout_marginLeft="55dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/senhaEditText"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:textColor="#606060"
            android:textColorHint="#606060" />

        <CheckBox
            android:id="@+id/lembrarSenhaCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:text="Lembrar senha" />

        <Button
            android:id="@+id/entrarButton"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Entrar"
            style="@style/ButtonBlack"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button_black"
            />

        <TextView
            android:id="@+id/esqueceuSenhaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Esqueceu a senha?"
            android:textColor="#067302" />

        <TextView
            android:id="@+id/cadastreSeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Cadastre-se!"
            android:textColor="#067302" />

    </LinearLayout>

</RelativeLayout>
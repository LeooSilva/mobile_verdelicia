<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Borda branca -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="20dp" /> <!-- Ajuste o valor para arredondar mais ou menos -->
        </shape>
    </item>

    <!-- Imagem -->
    <item android:left="8dp" android:right="8dp" android:top="8dp" android:bottom="8dp">
        <bitmap android:src="@drawable/frutas_verdes" android:gravity="center" />
    </item>
</layer-list>
